<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Allows to use just a connection to access PostgreSQL in your system</Description>
    <AssemblyVersion>6.0.2</AssemblyVersion>
    <FileVersion>6.0.2</FileVersion>
    <PackageProjectUrl>https://github.com/hudsonventura/SinglePostgres</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/hudsonventura/SinglePostgres</PackageLicenseUrl>
    <Authors>Hudson Ventura</Authors>
    <Company>Hudson Ventura</Company>
    <PackageId>SinglePostgres</PackageId>
    <Product>SinglePostgres</Product>
    <Version>6.0.2</Version>
    <AssemblyName>PostgreSingleton</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" Version="6.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
